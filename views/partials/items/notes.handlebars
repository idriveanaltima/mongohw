

<div class="modal" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> Notes for {{this.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#if this.notes}}
        {{#each this.notes}}
          <div class="panel panel-default">
            <div class="panel-body">
              <p class="previousNotes">
                {{this.body}}
              </p>
              <button
                type="button"
                class="btn btn-danger deleteNote"
                data-note-id={{this._id}}
                data-article-id={{this.article}}>
                X
              </button>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>
              No notes yet.
            </h4>
          </div>
        </div>
      {{/if}}
      </div>
      <div class="form-group">
         <textarea id="noteBody" class="form-control" rows="6" placeholder="New Note"></textarea>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary saveNote">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>